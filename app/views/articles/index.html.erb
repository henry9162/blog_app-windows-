<h1>Listing all articles</h1>
<div class="row">
  <% @articles.each do |article| %>
  
    <div class="col-12 my-1">
      <div class="card card-lg">
        <div class="card-header">
          <%= link_to article.title, article_path(article) %>
        </div>
        <div class="card-body">
          <%= truncate(article.description, length: 100) %>
        </div>
        <div class="card-footer">
          <%= link_to "Edit this article", edit_article_path(article), class: "btn btn-sm btn-primary mx-1" %>
          <%= link_to "Delete this article", article_path(article), class: "btn btn-sm btn-warning mx-1", method: :delete, data: {confirm: "Are you sure you want to delete the article?"} %>
        </div>
      </div>
    </div>
    
  <%end%>
</div>